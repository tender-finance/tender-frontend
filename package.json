{
  "name": "remix-app-template",
  "private": true,
  "description": "",
  "license": "",
  "sideEffects": false,
  "scripts": {
    "build": "run-s build:*",
    "build:css": "npm run generate:css -- --minify",
    "build:remix": "remix build",
    "dev": "run-p dev:*",
    "dev:css": "npm run generate:css -- --watch",
    "dev:remix": "cross-env NODE_ENV=development remix dev",
    "format": "prettier --write .",
    "generate:css": "npx tailwindcss -i ./styles/tailwind.css -o ./app/tailwind.css",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "postinstall": "remix setup node",
    "start": "cross-env NODE_ENV=production remix-serve build",
    "test": "vitest",
    "test:e2e:dev": "start-server-and-test dev http://localhost:3000 \"cypress open\"",
    "pretest:e2e:run": "npm run build",
    "test:e2e:run": "export PORT=8811; start-server-and-test dev http://localhost:8811 \"cypress run\"",
    "typecheck": "tsc -b && tsc -b cypress",
    "validate": "run-p \"test -- --run\" lint typecheck test:e2e:run",
    "storybook": "export NODE_OPTIONS=--openssl-legacy-provider; start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "dependencies": {
    "@ethersproject/providers": "^5.6.1",
    "@faker-js/faker": "^6.1.2",
    "@remix-run/react": "^1.2.3",
    "@remix-run/vercel": "^1.2.3",
    "@testing-library/cypress": "^8.0.2",
    "@testing-library/dom": "^8.13.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/user-event": "^14.1.1",
    "@vitejs/plugin-react": "^1.3.1",
    "@web3-react/core": "8.0.22-beta.0",
    "@web3-react/metamask": "8.0.18-beta.0",
    "@web3-react/types": "8.0.11-beta.0",
    "binode": "^1.0.5",
    "c8": "^7.11.2",
    "clsx": "^1.1.1",
    "cypress": "^9.5.4",
    "ethers": "^5.6.1",
    "human-readable-numbers": "^0.9.5",
    "logrocket": "^3.0.0",
    "lottie-react": "^2.2.1",
    "mathjs": "^10.6.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hot-toast": "^2.2.0",
    "react-modal": "^3.14.4",
    "remix": "^1.2.3",
    "start-server-and-test": "^1.14.0",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "vite-tsconfig-paths": "^3.4.1",
    "vitest": "^0.9.3"
  },
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build"
  ],
  "devDependencies": {
    "@babel/core": "^7.18.2",
    "@remix-run/dev": "^1.2.3",
    "@remix-run/eslint-config": "^1.2.3",
    "@remix-run/serve": "^1.2.3",
    "@storybook/addon-actions": "^6.5.6",
    "@storybook/addon-essentials": "^6.5.6",
    "@storybook/addon-interactions": "^6.5.6",
    "@storybook/addon-links": "^6.5.6",
    "@storybook/builder-webpack4": "^6.5.6",
    "@storybook/manager-webpack4": "^6.5.6",
    "@storybook/react": "^6.5.6",
    "@storybook/testing-library": "^0.0.11",
    "@types/react": "^18.0.12",
    "@types/react-dom": "^18.0.5",
    "@types/react-modal": "^3.13.1",
    "babel-loader": "^8.2.5",
    "cross-env": "^7.0.3",
    "eslint": "^8.9.0",
    "eslint-plugin-storybook": "^0.5.12",
    "happy-dom": "^2.55.0",
    "msw": "^0.39.2",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.5.5"
  },
  "engines": {
    "node": ">=14"
  }
}
